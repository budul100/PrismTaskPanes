<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0-windows</TargetFramework>
		<EnableComHosting>true</EnableComHosting>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<EmbeddedResource Include="RibbonUI.xml"/>
	</ItemGroup>

		<ItemGroup>
		<PackageReference Include="NetOfficeFw.Core" Version="1.8.1"/>
		<PackageReference Include="NetOfficeFw.PowerPoint" Version="1.8.1"/>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\..\DryIoc\DryIoc.PowerPoint\DryIoc.PowerPoint.csproj"/>
		<ProjectReference Include="..\..\..\Base\ExampleView\ExampleView.csproj"/>
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<OutputPath>..\..\..\..\_Debug\PowerPoint</OutputPath>
	</PropertyGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="if $(ConfigurationName)==Debug regsvr32 /s $(TargetDir)$(TargetName).comhost.dll"/>
	</Target>

</Project>